# Django core
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=False
# Comma-separated list, e.g. example.com,api.example.com
DJANGO_ALLOWED_HOSTS=*

# App-specific (extraction/curation)
# Absolute path inside container or host-mounted; defaults to /app/extracted equivalent
KWC_WALLPAPERS_FOLDER=
# Folder naming Jinja-like template (optional)
KWC_FOLDER_PATTERN={{ title }}{% if year %} ({{ year }}){% endif %}
# Image filename template (optional)
KWC_IMAGE_PATTERN={{ title }}{% if season %} S{{ season|pad:2 }}{% endif %}{% if episode %}E{{ episode|pad:2 }}{% endif %} ã€œ {{ counter|pad:4 }}.jpg

# Web/gunicorn
PORT=8000
# Optional tuning
WEB_CONCURRENCY=

